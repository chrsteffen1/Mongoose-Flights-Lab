<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %>
      <a href="/flights/<%= flight._id %>/edit">
        <button>Edit Flight</button>
      </a>
    </div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNumber %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
    <div>Meals</div>
    <ul>
      <% flight.meals.forEach(meal => { %> 
        <li><%= meal.name %>
          <form action="flights/<%=flight._id%>/meals/<%= meal._id %>?_method=DELETE" method="POST">
            <button>X</button>
          </form>
        </li>
        <% }) %> 
    </ul>
  </section>
  <form id="add-meals" action="/flights/<%= flight._id %>/meals" method="POST">
    <select name="mealId">
      <% meals.forEach(meal => { %> 
        <option value="<%= meal._id %>"><%= meal.name %> </option>
        <% }) %> 
    </select>
    <button type="submit">Add Meal</button>
  </form>

    <h2>Tickets</h2>
    <form 
      id="add-ticket-form"
      action="/flights/<%= flight._id %>/tickets"
      method="POST"
    >
      <label for="seat-textarea">Seat (select A-F and 1-99):</label>
      <input name="seat" required pattern="[A-F][1-9]\d?">
      <label for="price-select">Price $:</label>
      <input name="price" id="price">
      <button type="submit">Select Seat</button>
    </form>
    <% if (flight.tickets.length) {%> 
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
            <td>
              <form action="flights/<%=flight._id%>/tickets/<%= ticket._id %>?_method=DELETE" method="POST">
                <button>X</button>
              </form>
            </td>
          </tr>
          <% }) %> 
      </tbody>
    </table>
    <% } else { %> 
      <h3>No Tickets Yet</h3>
    <% } %> 
</main>
  
<%- include('../partials/footer') %>